@model List<Rating>

<div class="container mt-5">
    <div class="row mb-5 d-flex justify-content-center">
        <form method="post" asp-action="Rating">
            <div class="col-lg-12 d-flex justify-content-center flex-column">
                <div class="form-group">
                    <p style="text-align: center" class="h3 hb"> Фильтр</p>
                    <select size="1" name="FilterId" class="form-control">
                        @if (ViewBag.Filter == 1)
                        {
                            <option selected value="1">Класс</option>
                        }
                        else
                        {
                            <option value="1">Класс</option>
                        }
                        
                        @if (ViewBag.Filter == 2)
                        {
                            <option selected value="2">Тема</option>
                        }
                        else
                        {
                            <option value="2">Тема</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Дата от</label>
                    <input type="text" name="startDate" id="startDate" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> Дата до</label>
                    <p/>
                    <input id="endDate" name="endDate" class="form-control"/>
                </div>
                <button type="submit" class="btn rounded shadow-sm rounded-pill hr" style="background-color: #FFC23A; font-size: 20px">Посмотреть</button>
            </div>
        </form>


    </div>
    <div class="row class">
        @{ int number = 0; }
        @foreach (var item in @Model)
        {
            number += 1;
            <div class="col-lg-4 d-flex justify-content-end align-items-center mt-5 hb" style="font-size: 40px">@number</div>
            <div class="col-lg-4 d-flex align-items-center mt-5 hm">
                @Html.DisplayFor(modelElem => item.Name)
            </div>
            <div class="col-lg-4 d-flex align-items-center mt-5 hm">
                @Html.DisplayFor(modelElem => item.CountEvents) баллов
            </div>
        }
    </div>
</div>

<script>
$("#startDate").kendoDatePicker({
        format: "{0:dd/MM/yyyy}"
    });
$("#endDate").kendoDatePicker({
        format: "{0:dd/MM/yyyy}"
        });
</script>