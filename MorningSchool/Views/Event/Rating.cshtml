<div class="d-flex flex-row">
    <div class="ml-1">
        <form method="post" asp-action="Rating">
            <div class="bg-secondary shadow p-3 mb-5 bg-white rounded align-self-start">
                <div class="form-group">
                    <p style="text-align: center" class="h3 hb"> Фильтр</p>
                    <select size="1" name="FilterId" class="form-control">
                        @if (ViewBag.Filter == 1)
                        {
                            <option selected value="1">Класс</option>
                        }
                        else
                        {
                            <option value="1">Класс</option>
                        }

                        @if (ViewBag.Filter == 2)
                        {
                            <option selected value="2">Тема</option>
                        }
                        else
                        {
                            <option value="2">Тема</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Дата от</label>
                    <input type="date" name="startDate" class="form-control" value="@if (ViewBag.StartDate != null){@ViewBag.StartDate.ToString("yyyy-MM-dd")}"/>
                </div>
                <div class="form-group">
                    <label> Дата до</label>
                    <p/>
                    <input type="date" name="endDate" class="form-control" value="@if (ViewBag.EndDate != null){@ViewBag.EndDate.ToString("yyyy-MM-dd")}"/>
                </div>
                <button type="submit" class="btn btn-success btn-block">Применить</button>
            </div>
        </form>
    </div>
    <div class="container">
        <div class="col-12 bg-secondary shadow p-3 mb-5 bg-white rounded m-1 ">
            <div class="row justify-content-center">
                <div class="col-lg-4 d-flex justify-content-center align-items-center mb-2 h5">Место</div>
                <div class="col-lg-4 d-flex justify-content-center align-items-center mb-2 h5">
                    Класс/Тема
                </div>
                <div class="col-lg-4 d-flex justify-content-center  align-items-center mb-2 h5">
                    Количество баллов
                </div>
                @{ int number = 0; }
                @foreach (var item in @Model)
                {
                    number += 1;
                    <div class="col-lg-4 d-flex justify-content-center  align-items-center mb-2" style="font-size: 40px">@number</div>
                    <div class="col-lg-4 d-flex justify-content-center  align-items-center mb-2">
                        @Html.DisplayFor(modelElem => item.Name)
                    </div>
                    <div class="col-lg-4 d-flex justify-content-center  align-items-center mb-2">
                        @Html.DisplayFor(modelElem => item.CountEvents) баллов
                    </div>
                }
            </div>
        </div>
    </div>
</div>