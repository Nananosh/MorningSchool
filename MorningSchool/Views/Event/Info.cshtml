@model EventViewModel
<div class="container mb-5">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-center mb-2">
            <h1>@Model.EventsName</h1>
        </div>
        <div class="col-lg-6 d-flex justify-content-left">
            <img src="@Model.ImgUrl" alt="картинка мероприятия" style="max-width:500px; max-height:600px;"/>
        </div>
        <div class="col-lg-6">
            <div class="d-flex align-items-baseline mt-2 flex-row">
                <p class="h4">Тема: </p>
                <p class="ml-2" style="font-size: 25px">@Model.Theme.ThemeName</p>
            </div>
            <div class="d-flex align-items-baseline mt-2 flex-row">
                <p class="h4">Дата проведения: </p>
                <p class="ml-2" style="font-size: 25px">@Model.EventDate</p>
            </div>
            @if (Model.Class != null)
            {
                <div class="d-flex align-items-baseline mt-2 flex-row">
                    <p class="h4">Участники: </p>
                    <p class="ml-2" style="font-size: 25px">@Model.Class.ClassName</p>
                </div>
                <div class="d-flex align-items-baseline mt-2 flex-row">
                    <p class="h4">Место проведения: </p>
                    <p class="ml-2" style="font-size: 25px"> кабинет №@Model.Cabinet.CabinetNumber</p>
                </div>
            }
            else
            {
                <div class="d-flex align-items-baseline mt-2 flex-row">
                    <p class="h4">Участники: </p>
                    <p class="ml-2" style="font-size: 25px">все желающие</p>
                </div>
                <div class=" d-flex  align-items-baseline mt-2 flex-row">
                    <p class="h4">Место проведения: </p>
                    <p class="ml-2" style="font-size: 25px">главный вход школы</p>
                </div>
            }
            <div class="d-flex align-items-baseline mt-2 flex-row">
                <p class="h4">Ведущий: </p>
                <p class="ml-2" style="font-size: 25px">@Model.EventManager</p>
            </div>
        </div>
    </div>
    <div class="col-lg-12 mt-2" style="font-size: 25px">
        <p>@Model.Description</p>
    </div>
    @if (ViewBag.EventResult.Count > 0)
    {
        <div class="col-lg-12 mt-2 mb-3 d-flex justify-content-center">
            <h2>
                Фотографии прошедшего мероприятия :
            </h2>
        </div>
        <div class="col-lg-12 d-flex justify-content-center">
            <div class="col-lg-9 d-flex justify-content-center">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @{ int count = 0; }
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < ViewBag.EventResult.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                                }
                            }
                        </ol>
                        @foreach (var result in ViewBag.EventResult)
                        {
                            if (count == 0)
                            {
                                <div class="carousel-item active">
                                    <img src="@result.ImageUrl" alt="..." style="height: 450px; width: 850px; object-fit:cover;">
                                    <div class="carousel-caption d-none d-md-block">
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="@result.ImageUrl" alt="..." style="height: 450px; width: 850px; object-fit:cover;">
                                    <div class="carousel-caption d-none d-md-block">
                                    </div>
                                </div>
                            }
                            count++;
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    }
</div>