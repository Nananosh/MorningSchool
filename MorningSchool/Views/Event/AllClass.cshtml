@model List<MorningSchool.ViewModels.ClassViewModel>

<div class="container">
    <div class="row d-flex justify-content-between">
    @foreach (var classItem in @Model)
    {
        <div class="col-lg-5 bg-secondary shadow p-3 mb-5 bg-white rounded flex-column">
            <div class="d-flex justify-content-center align-items-baseline">
                <div class="mr-1 h2">@classItem.ClassName</div>
            </div>
            <div class="d-flex justify-content-center align-items-baseline">
                Классный руководитель : @classItem.ClassroomTeacher.FullName
            </div>
        </div>
    }
    </div>
</div>