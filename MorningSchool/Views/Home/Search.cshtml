@model List<EventViewModel>

<div class="container">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-center mb-5"><div class="h2">Найдено @Model.Count</div></div>
        @foreach (var item in @Model)
        {
            <div class="col-4 mb-4">
                <div class="card">
                    @if (item.ImgUrl != null)
                    {
                        <a href="/Event/Info/@item.Id">
                            <img src=@item.ImgUrl alt="..." class="img-thumbnail"> </a>
                    }
                    <div class="card-body">
                        <h4 class="card-title">@item.EventsName</h4>
                        <p class="card-text cropped-text">
                            @item.EventManager <br/>
                            @item.Class.ClassName
                        </p>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <a asp-action="Info" asp-controller="Event" asp-route-id="@item.Id" class="btn btn-primary mt-3"><i class="fas fa-shopping-cart"></i>Подробнее</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>