<div id="grid"> </div>
<script>
    $("#grid").kendoGrid({
        dataSource: {
            transport: {
                read: "@Url.Action("GetAllThemes", "Admin")",
                update: {
                    url: "@Url.Action("EditTheme", "Admin")",
                    dataType: "json",
                    type: "POST"
                },
                create: {
                    url: "@Url.Action("AddTheme", "Admin")",
                    dataType: "json",
                    type: "POST"
                },
                destroy: {
                    url: "@Url.Action("DeleteTheme", "Admin")",
                    dataType: "json",
                    type: "DELETE"
                }
            },
            schema: {
                model: {
                    id: "Id",
                    fields: {
                        Id: {from: "id", type: "number", editable: false},
                        ThemeName: { from: "themeName", validation: { required: true } }
                    }
                }
            },
            pageSize: 20,
            serverPaging: false,
            serverFiltering: false,
            serverSorting: false
        },
        toolbar: [
            { name: "create" }
        ],
            height: 550,
            editable: "popup",
            pageable: true,
            filterable: true,
            sortable: true,
            columns: [
                {
                    field: "ThemeName",
                    title: "Название темы"
                },
                {
                    command: "edit"
                },
                {
                    command: "destroy"
                }
            ]
        });
</script>