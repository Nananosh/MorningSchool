<div id="grid"> </div>
<script>
    $("#grid").kendoGrid({
                dataSource: {
                    transport: {
                        read: "@Url.Action("GetAllClasses", "Admin")",
                        update: {
                            url: "@Url.Action("EditClass", "Admin")",
                            dataType: "json",
                            type: "POST"
                        },
                        create: {
                            url: "@Url.Action("AddClass", "Admin")",
                            dataType: "json",
                            type: "POST"
                        },
                        destroy: {
                            url: "@Url.Action("DeleteClass", "Admin")",
                            dataType: "json",
                            type: "DELETE"
                        }
                    },
                    schema: {
                        model: {
                            id: "Id",
                            fields: {
                                Id: {from: "id", type: "number", editable: false},
                                ClassName: { from: "className", validation: { required: true } },
                                ClassroomTeacher: { from: "classroomTeacher", validation: { required: true } },
                                ClassroomTeacherId: { from: "classroomTeacherId", validation: { required: true } },
                            }
                        }
                    },
                    pageSize: 20,
                    serverPaging: false,
                    serverFiltering: false,
                    serverSorting: false
        },
        toolbar: [
            { name: "create" }
        ],
                height: 550,
                editable: "popup",
                pageable: true,
                filterable: true,
                sortable: true,
                columns: [
                    {
                        field: "ClassName",
                        title: "Номер класса"
                    },
                    {
                        field: "ClassroomTeacher.fullName",
                        title: "Классный руководитель",
                        editor: classroomTeacherEditor
                    },
                    {
                        command: "edit"
                    },
                    {
                        command: "destroy"
                    }
                ]
            });
    
    function classroomTeacherEditor(container, options) {
                       $('<input required name="ClassroomTeacherId">')
                           .appendTo(container)
                           .kendoDropDownList({
                               dataTextField: "fullName",
                               dataValueField: "id",
                               height: 500,
                               dataSource: {
                                   transport: {
                                       read: {
                                           url: "@Url.Action("GetAllClassroomTeachers", "Admin")",
                                           dataType: "json",
                                           cache: false
                                       }
                                   }
                               }
                           });
                   }
</script>