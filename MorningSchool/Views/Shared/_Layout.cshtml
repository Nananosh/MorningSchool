<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MorningSchool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>

    <link href="~/lib/Kendo/styles/kendo.bootstrap-main.css" rel="stylesheet"/>
    <script src="~/lib/Kendo/js/jquery.min.js"></script>
    <script src="~/lib/Kendo/js/kendo.all.min.js"></script>
    <script src="~/lib/Kendo/js/kendo.timezones.min.js"></script>
    <script src="~/lib/Kendo/js/cultures/kendo.culture.ru-RU.min.js"></script>
    <script src="~/lib/Kendo/js/messages/kendo.messages.ru-RU.min.js"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="url(/../../../gerb.png" width="30" height="30" class="d-inline-block align-top mr-1" alt="">MorningSchool</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="GetEvents">Все мероприятия</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="AllTeacher">Все преподаватели</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="AllClass">Все классы</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="Rating">Рейтинг</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <form method="get" asp-action="Search">
                        <input type="text" name="eventName"/>
                        <button type="submit" class="btn">Поиск</button>
                    </form>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                               role="button" data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                <img id="avatar" class="rounded-circle" src="" value="" alt="avatar" style="height: 33px; width: 33px; object-fit:cover;"/>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-route-id="@User.Claims.ElementAt(0).Value">@User.Claims.ElementAt(1).Value</a>
                                <div class="dropdown-divider"></div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="AdminCabinet">Адм.кабинетов</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="AdminClassroomTeacher">Адм.класс.учителей</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="AdminTheme">Адм.тем</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="AdminClass">Адм.классов</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="AdminEvent">Адм.МП</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="EventsChart">Отчёт по МП</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="ThemesChart">Отчёт по Темам</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="ClassesChart">Отчёт по Классам</a>
                                }
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Войти</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<main role="main" class="pb-3">
        @RenderBody()
    </main>
@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>